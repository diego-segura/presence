---
import Base from '../layouts/Base.astro';
import WorkImage from '../components/WorkImage.astro';
import WorkVimeo from '../components/WorkVimeo.astro';
import WorkListing from '../components/WorkListing.astro';
import Nav from '../components/Nav.astro';
---

<Base options="">
  <Nav />
  <div class="text-sm antialiased mt-10 max-w-4xl text-center mx-auto pt-20">
    To work together, <a href="mailto:diegosegura@hey.com" class="border-b border-neutral-300 hover:border-black transition duration-300">email</a> or <a href="https://calendly.com/segura-diego" class="border-b border-neutral-300 hover:border-black transition duration-300">book time</a>.
