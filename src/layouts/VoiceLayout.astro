---
const { frontmatter } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Diego Segura</title>
    <meta name="description" content="The work of Diego Segura, a designer, writer, and founder based in Lower Manhattan." />
    <meta name="author" content="Diego Segura" />
    <link rel="alternate" type="application/rss+xml" href="/rss.xml" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <div class="">
      <div class="flex flex-row">
        <div class="w-1/2 aspect-square bg-white shadow-lg rounded-xl m-4 p-4">
          <div class="text-xs uppercase text-neutral-300">Transcription</div>
        <h1 class="text-sm pt-3">{frontmatter.preview}</h1>
      </div>
      <div class="flex flex-col">
      </div>
      </div>
    </div>
    <div class="flex flex-row">
      <div class="m-4 h-full items-center">
        <p class="text-xs text-neutral-400">
        {new Date(frontmatter.date).toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' })}
        </p>
      </div>
      <div class="grow">
        <slot />
      </div>
    </div>
  </body>
</html>
